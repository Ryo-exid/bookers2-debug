<% if book.favorited_by?(current_user) %>
    <%= link_to book.favorites.count, book_favorites_path(book), method: :delete, class: "fa fa-heart like-btn", remote: true %>
<% else %>
    <%= link_to book.favorites.count, book_favorites_path(book), method: :post, class: "fa fa-heart like-btn-unkike", remote: true %>
<% end %>