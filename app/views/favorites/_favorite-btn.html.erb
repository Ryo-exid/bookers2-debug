<% if book.favorited_by?(current_user) %>
  <p>
    <%= link_to book_favorites_path(book), method: :delete do %>
      <span class="fa fa-heart like-btn"><%= book.favorites.count %></span>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to book_favorites_path(book), method: :post do %>
      <span class="fa fa-heart like-btn-unkike"><%= book.favorites.count %></span>
    <% end %>
  </p>
<% end %>